<h1>Posts#show</h1>


<%= link_to 'All Post', posts_path %>

<p>
  <%= @post.title %><br>
  <%= time_ago @post.created_at %>
</p>

<p>
  <%= @post.content %>
</p>

<h3>Comments</h3>

<p>
  <% @post.comments.approved.each.with_index(1) do |comment, index| %>
    <%= comment.message %><b><%= double_digit_number(index) %></b><br>
    <b><%= comment.visitor.fullname %> </b>commented:<%= time_ago comment.created_at %><hr>
  <% end %>
</p>

<% if Setting.first.prevent_commenting %>
 <h2>Comments committing is block for now</h2>
 <% else %>
<%= form_for @visitor_comment, url: comments_url do |f| %>
  <% if session[:visitor_errors] %>
  <div class="" id="error_explanation">
    <h2><%= pluralize(session[:visitor_errors].count, "error") %> occur when try to save this comment:</h2>
    <ul>
      <% session[:visitor_errors].each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

   <p>
     <%= f.label :fullname %>
     <%= f.text_field :fullname %>
   </p>

   <p>
     <%= f.label :email %>
     <%= f.text_field :email %>
   </p>

  <%= f.fields_for :comments do |c| %>
   <p>

     <%= c.label :message %>
     <%= c.text_area :message %>
     <%= c.hidden_field :post_id, value: @post.id %>
   </p>

   <% end %>

   <p><%= f.submit 'Add Comment' %></p>
<% end %>




   <% end %>
