<h1>Comments</h1>

<p>
  <%= render 'search', route: admin_comments_path %>
</p>



<% @comments.each do |comment| %>
   <p><b><%= comment.visitor.fullname %></b> posted message on <b><%= comment.post.title %></b></p>
   <p><%= comment.message %></p>
   <p><%= link_to 'Delete', admin_comment_path(comment), method: :delete, data: {confirm: 'Are you serious?'}, class:"btn btn-danger" %>
      <%=
    if params[:status] == 'true'
      link_to 'Un-approve', admin_comment_path(comment, status: false), method: :put, class:"btn btn-warning"
      else
      link_to 'Approve', admin_comment_path(comment, status: true), method: :put, class:"btn btn-success"
    end
      %>
   </p>

<% end %>

<%= paginate @comments %>
