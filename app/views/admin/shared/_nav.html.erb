
<!-- Side Menu -->
  <div class="col-lg-2 col-sm-1 hidden-xs display-table-cell valign-top" id="side-menu">
    <h1 class="hidden-sm hidden-xs">Navigation</h1>
    <ul>
      <li class="link active">
        <%= link_to admin_dashboard_index_path do%>
          <span class="glyphicon glyphicon-th" aria-hidden="tru"></span>
          <span class="hidden-sm hidden-xs">Dashboard</span>
        <% end %>
      </li>

      <li class="link">
        <a href="#collapse-post" data-toggle="collapse" aria-controls="collapse-post">
          <span class="glyphicon glyphicon-list-alt" aria-hidden="tru"></span>
          <span class="hidden-sm hidden-xs">Article</span>
          <span class="label label-success pull-right hidden-sm hidden-xs"><%= Post.all.count %></span>
        </a>
        <ul class="collapse collapseable" id="collapse-post">

          <li>
            <%= link_to new_admin_post_path do%>>
              Create New
            <% end %>
          </li>
          <li>
            <%= link_to admin_posts_path do%>
            View Article
          <% end %></li>
        </ul>
      </li>

      <li class="link">
        <a href="#collapse-comments" data-toggle="collapse" aria-controls="collapse-comments">
          <span class="glyphicon glyphicon-pencil" aria-hidden="tru"></span>
          <span class="hidden-sm hidden-xs">Comments</span>
        </a>
        <ul class="collapse collapseable" id="collapse-comments">
          <li>
          <%= link_to admin_comments_path(status: true) do%>
            Approved
            <span class="label label-success pull-right hidden-sm hidden-xs"><%= Comment.where(status: true).count %></span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_comments_path(status: false) do%>
            Unapproved
            <span class="label label-warning pull-right hidden-sm hidden-xs"><%= Comment.where(status: false).count %></span>
            <% end %>
          </li>
        </ul>
      </li>

      <li class="link">
        <%= link_to admin_visitors_path do%>
          <span class="glyphicon glyphicon-user" aria-hidden="tru"></span>
          <span class="hidden-sm hidden-xs">Commenters</span>
        <% end %>
      </li>

      <li class="link">
        <%= link_to new_admin_tag_path do%>
          <span class="glyphicon glyphicon-tags" aria-hidden="tru"></span>
          <span class="hidden-sm hidden-xs">Tags</span>
        <% end %>
      </li>

      <li class="link settings-btn">
       <%= link_to new_admin_setting_path do%>
          <span class="glyphicon glyphicon-cog" aria-hidden="tru"></span>
          <span class="hidden-sm hidden-xs">Settings</span>
        <% end %>
      </li>

      <li class="link settings-btn">
        <%= link_to admin_moderators_path do%>
          <span class="glyphicon glyphicon-cog" aria-hidden="tru"></span>
          <span class="hidden-sm hidden-xs">Moderators</span>
         <% end %>
      </li>
    </ul>

  </div><!-- end col-2 -->
<!-- End Side Menu -->

