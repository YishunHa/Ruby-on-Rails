									<% end %>
								</li>
								<li>
									   <%= link_to logout_path do%>
										<span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
										log out
									<% end %>
								</li>
							</ul>
						</div><!-- end col 7 -->
					</header><!-- end header -->
