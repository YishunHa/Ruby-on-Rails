<h1>Tags</h1>


<%= form_for [:admin, @tag] do |f| %>
   <p><%= f.text_area :name, placeholder: 'e.g Ruby, Python, PHP' %></p>
   <%= f.submit 'Create a tag', class:"btn btn-success"%>
   <% end %>


   <div class="col-md-12">
     <div class="admin-content-con clearfix">
       <header>
         <h5>Commenters</h5>
       </header>
       <table class="table table-bordered">
         <thead>
           <tr>
             <th>name</th>
             <th>status</th>
             <th>created</th>
             <th>actions</th>
           </tr>
         </thead>
         <tbody>
             <% @tags.each do |tag| %>
           <tr>
             <td><%= tag.name %></td>
             <td><div href="#" class="label label-default"><%= status_converter(tag.in_use?, truthy: 'in used', falsey: 'not in use') %></div></td>
             <td><%= time_ago tag.created_at %></td>
             <td>

               <%= link_to edit_admin_tag_path(tag) do %>
               <div class="btn btn-primary">Edit</div>
               <% end %>

               <%= create_deletable_button tag %>


             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>
   </div>
